{
    "name": "windwalker/starter",
    "description": "Windwalker Starter.",
    "homepage": "https://github.com/ventoviro/windwalker-starter",
    "license": "MIT",
    "minimum-stability": "beta",
    "authors": [
        {
            "name": "Simon Asika",
            "email": "asika32764@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "windwalker/core": "^4.0",
        "windwalker/renderer": "^4.0",
        "windwalker/dom": "^4.0",
        "windwalker/edge": "^4.0",
        "asika/cross-env": "^1.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0",
        "dragonmantank/cron-expression": "^3.1",
        "symfony/mailer": "^5.2",
        "composer-plugin-api": "^2.0"
    },
    "scripts": {
        "post-create-project-cmd": [
            "php windwalker run prepare",
            "Windwalker\\Core\\Composer\\StarterInstaller::rootInstall"
        ],
        "post-autoload-dump": [
            "php windwalker pkg:install --tag config",
            "php windwalker cache:clear renderer"
        ],
        "reinstall": [
            "Windwalker\\Core\\Composer\\StarterInstaller::genEnv"
        ]
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "platform": {
            "php": "8.0.0"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.x-dev",
            "next": "4.x-dev"
        }
    }
}
